{
  "name": "api3-dao-dashboard",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "scripts": {
    "build": "yarn copy-localhost-deployment && react-scripts build",
    "copy-localhost-deployment": "cd src/contract-deployments && cp localhost-dao.example.json localhost-dao.json",
    "eject": "react-scripts eject",
    "eth:compile-contracts": "cd hardhat && npx hardhat compile",
    "eth:node": "cd hardhat && npx hardhat node --network hardhat",
    "eth:set-dao-apps:localhost": "cd hardhat && npx hardhat run scripts/set-dao-apps-in-pool",
    "eth:run-script": "cd hardhat && npx hardhat run",
    "fix-contract-imports": "yarn replace-in-file @api3-dao/pool/contracts ../pool-contracts-symlink hardhat/contracts/voting-contracts-symlink/Api3Voting.sol && yarn replace-in-file @api3-dao/pool/contracts ../pool-contracts-symlink hardhat/contracts/convenience-contracts-symlink/Convenience.sol && yarn replace-in-file @api3-dao/api3-voting/interfaces ../voting-interfaces-symlink hardhat/contracts/convenience-contracts-symlink/Convenience.sol && yarn replace-in-file 0.6.12 0.8.4 $(find hardhat/contracts -type f -follow)",
    "fix-scss-ts": "node scss-ts-hack.js",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "generate-contracts": "yarn typechain --target ethers-v5 --outDir ./src/generated-contracts './hardhat/artifacts/contracts/**/!(*.dbg).json'",
    "lint": "eslint --ext js,ts,tsx src",
    "postinstall": "yarn fix-contract-imports && yarn eth:compile-contracts && yarn generate-contracts && yarn fix-scss-ts",
    "prepare": "husky install",
    "send-to-account": "cd hardhat && npx hardhat send-to-account --address",
    "start": "BROWSER=none react-scripts start",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "tsc": "tsc --project tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn tsc"
    }
  },
  "lint-staged": {
    "{src,hardhat}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "package.json": "sort-package-json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "@sentry/react": "^6.5.1",
    "@walletconnect/web3-provider": "^1.4.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.21.3",
    "ethers": "^5.3.1",
    "immer": "^9.0.2",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.0.9",
    "react-input-autosize": "^3.0.0",
    "react-number-format": "^4.5.5",
    "react-responsive-carousel": "^3.2.18",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^7.0.4",
    "web3modal": "^1.9.3"
  },
  "devDependencies": {
    "@aragon/os": "^4.4.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@openzeppelin/contracts": "^4.1.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.17",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-input-autosize": "^2.2.0",
    "@types/react-router-dom": "^5.1.7",
    "api3-dao": "git+https://github.com/api3dao/api3-dao.git#0bc9ee4a4a29828f4b034e1e03005f5cdb27f9e5",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "faker": "^5.5.3",
    "hardhat": "^2.2.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "npx": "^10.2.2",
    "prettier": "^2.2.1",
    "react-scripts": "4.0.3",
    "replace-in-file": "^6.2.0",
    "sort-package-json": "^1.50.0",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4",
    "typescript-plugin-css-modules": "^3.4.0"
  }
}
