{
  "name": "api3-dao-dashboard",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "scripts": {
    "build": "react-scripts build",
    "ci:cypress": "yarn start-test \"yarn concurrently 'yarn eth:node' 'yarn ci:start'\" '8545|3000' 'yarn eth:deploy-dao-contracts-on-hardhat && yarn percy exec -- yarn cypress:run'",
    "ci:start": "FORCE_COLOR=true yarn start | cat",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "eject": "react-scripts eject",
    "eth:deploy-dao-contracts-on-hardhat": "node dev-scripts/deploy-dao-contracts-on-hardhat.js",
    "eth:node": "cd hardhat && npx hardhat node --network hardhat",
    "eth:prepare-dao-contracts-for-hardhat": "node dev-scripts/prepare-dao-contracts-for-hardhat.js",
    "eth:run-script": "cd hardhat && npx hardhat run",
    "fix-dev-issues": "node dev-scripts/copy-localhost-data.js && node dev-scripts/prepare-dao-contracts-for-typechain.js && node dev-scripts/scss-ts-hack.js",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "lint:fix": "eslint --fix --ext js,ts,tsx src dev-scripts",
    "lint": "eslint --ext js,ts,tsx src dev-scripts",
    "postinstall": "yarn fix-dev-issues",
    "postuninstall": "yarn fix-dev-issues",
    "prepare": "husky install",
    "send-to-account": "cd hardhat && npx hardhat send-to-account --address",
    "create-user-policy": "cd hardhat && npx hardhat create-user-policy",
    "claims:accept-claim": "cd hardhat && npx hardhat accept-claim",
    "claims:propose-settlement": "cd hardhat && npx hardhat propose-settlement",
    "claims:resolve-dispute-without-pay": "cd hardhat && npx hardhat resolve-dispute --ruling 0",
    "claims:resolve-dispute-with-settlement-payout": "cd hardhat && npx hardhat resolve-dispute --ruling 1",
    "claims:resolve-dispute-with-payout": "cd hardhat && npx hardhat resolve-dispute --ruling 2",
    "start": "BROWSER=none react-scripts start",
    "test:watch": "react-scripts test",
    "test": "react-scripts test --watchAll=false",
    "tsc:watch": "tsc --project tsconfig.json --watch",
    "tsc": "tsc --project tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn tsc"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@sentry/react": "^6.17.4",
    "@walletconnect/web3-provider": "^1.7.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.28.0",
    "ethers": "^5.5.4",
    "immer": "^9.0.12",
    "lodash": "^4.17.21",
    "rc-tooltip": "^5.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-focus-lock": "^2.7.1",
    "react-helmet-async": "^1.2.2",
    "react-input-autosize": "^3.0.0",
    "react-number-format": "^4.9.1",
    "react-responsive-carousel": "^3.2.22",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^7.0.4",
    "web3modal": "^1.9.5"
  },
  "devDependencies": {
    "@api3/claims-manager": "api3dao/claims-manager.git#0cf57283c1e21bad328b6aab78cc67614cad77fa",
    "@api3/promise-utils": "^0.1.0",
    "@aragon/os": "^4.4.0",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@openzeppelin/contracts": "4.2.0",
    "@percy/cli": "^1.5.1",
    "@percy/cypress": "^3.1.2",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@typechain/ethers-v5": "^8.0.2",
    "@types/chai": "^4.3.0",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.15",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-input-autosize": "^2.2.1",
    "@types/react-router-dom": "^5.3.3",
    "api3-dao": "git+https://github.com/api3dao/api3-dao.git#0b8bb17fbda0161d5d9fff00ed4562b91cc27af6",
    "chai": "^4.3.6",
    "chalk": "^4.1.2",
    "concurrently": "^7.0.0",
    "cypress": "^9.4.1",
    "cypress-plugin-tab": "^1.0.5",
    "dotenv": "^16.0.0",
    "hardhat": "^2.8.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "node-sass": "^7.0.1",
    "npx": "^10.2.2",
    "prettier": "^2.5.1",
    "react-scripts": "4.0.3",
    "replace-in-file": "^6.3.2",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.2",
    "typescript": "^4.5.5",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "resolutions": {
    "//": "Remove once upgraded to react-scripts v5. See https://github.com/facebook/create-react-app/issues/11773",
    "react-error-overlay": "6.0.9"
  },
  "percy": {
    "version": 2,
    "snapshot": {
      "widths": [
        375,
        1280
      ],
      "percyCSS": ".Toastify { visibility: hidden; }"
    },
    "discovery": {
      "disableCache": true
    }
  }
}
